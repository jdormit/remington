{
  "name": "remington",
  "version": "0.0.0",
  "description": "A keyboard input library",
  "main": "index.js",
  "scripts": {
    "prepush": "rm docs/* && npm run build && npm run build:min && npm run build:commit && git push --no-verify",
    "build": "webpack index.js --output-library-target var --output-library Remington docs/remington.js",
    "build:min": "webpack -p index.js --output-library-target var --output-library Remington docs/remington.min.js",
    "build:commit": "git add docs/* && git commit docs/* -m \"Automated build commit\" || :",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "keydown",
    "keyup",
    "keypress",
    "input",
    "keyboard",
    "text",
    "string",
    "typing"
  ],
  "author": "Jeremy Dormitzer",
  "license": "MIT",
  "devDependencies": {
    "husky": "^0.11.9",
    "jsdoc": "^3.4.2",
    "webpack": "^1.13.3"
  }
}
